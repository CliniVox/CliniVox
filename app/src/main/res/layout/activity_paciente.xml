<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:fillViewport="true"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Cabeçalho com título e botão configurações -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CliniVox"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <ImageButton
                android:id="@+id/btnConfig"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/btn_circle_bg"
                android:padding="8dp"
                android:src="@android:drawable/ic_menu_manage"
                android:tint="#42A5F5"
                android:contentDescription="Configurações"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <!-- Saudação -->
        <TextView
            android:id="@+id/textNomePaciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Olá, Caik!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#E1F5FE"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="40dp" />

        <!-- Avatar do assistente -->
        <ImageView
            android:id="@+id/imgAssistente"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_assistente"
            android:contentDescription="Avatar do assistente"
            android:background="@drawable/avatar_circle_bg"
            android:padding="12dp" />

        <!-- Botão para falar -->
        <Button
            android:id="@+id/btnFalar"
            android:layout_width="200dp"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:text="Toque para falar!"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/btn_gradient_rounded"
            android:elevation="6dp"
            android:stateListAnimator="@null" />

        <!-- Botão para desligar (invisível inicialmente) -->
        <Button
            android:id="@+id/btnDesligar"
            android:layout_width="200dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:text="Desligar"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:backgroundTint="#D9534F"
            android:background="@drawable/btn_rounded_red"
            android:visibility="gone"
            android:elevation="6dp"
            android:stateListAnimator="@null" />

        <!-- Botão de consultas -->
        <Button
            android:id="@+id/btnConsultas"
            android:layout_width="200dp"
            android:layout_height="56dp"
            android:layout_marginTop="40dp"
            android:text="Ver Consultas"
            android:textSize="16sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/btn_rounded_lightgreen"
            android:elevation="4dp"
            android:stateListAnimator="@null" />

    </LinearLayout>

</ScrollView>
