<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <!-- Logo e engrenagem -->
    <TextView
        android:id="@+id/textTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CliniVox"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <ImageButton
        android:id="@+id/btnConfig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_menu_manage"
        android:contentDescription="Configurações" />

    <!-- Saudação -->
    <TextView
        android:id="@+id/textNomePaciente"
        android:layout_below="@+id/textTitulo"
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Olá, Caik!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_centerHorizontal="true" />

    <!-- Avatar do assistente -->
    <ImageView
        android:id="@+id/imgAssistente"
        android:layout_below="@id/textNomePaciente"
        android:layout_marginTop="24dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_assistente"
        android:layout_centerHorizontal="true" />

    <!-- Texto abaixo do assistente -->
    <TextView
        android:id="@+id/textFalar"
        android:layout_below="@id/imgAssistente"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toque para falar!"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true" />

    <!-- Botão de consultas -->
    <Button
        android:id="@+id/btnConsultas"
        android:layout_below="@id/textFalar"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#A8D5A2"
        android:text="Consultas Agendadas"
        android:textColor="#000000"
        android:textSize="16sp"
        android:padding="12dp" />
</RelativeLayout>
