<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center_horizontal">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marcar Consulta"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp" />

        <!-- Especialidade -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Especialidade"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerEspecialidade"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/rounded_corners"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:popupBackground="#FFFFFF" />

        <!-- Data -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editData"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Ex: 18/05/2025"
            android:inputType="date"
            android:background="@drawable/rounded_corners"
            android:paddingStart="16dp"
            android:textColor="#212121"
            android:textColorHint="#90A4AE"
            android:textSize="16sp"
            android:fontFamily="sans-serif" />

        <!-- Hora -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hora"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editHora"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Ex: 14:30"
            android:inputType="time"
            android:background="@drawable/rounded_corners"
            android:paddingStart="16dp"
            android:textColor="#212121"
            android:textColorHint="#90A4AE"
            android:textSize="16sp"
            android:fontFamily="sans-serif" />

        <!-- Local -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Local da Consulta"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerLocal"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/rounded_corners"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:popupBackground="#FFFFFF" />

        <!-- Botão Confirmar -->
        <Button
            android:id="@+id/btnConfirmarConsulta"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Confirmar Consulta"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/btn_gradient_rounded"
            android:elevation="8dp"
            android:layout_marginTop="32dp"
            android:stateListAnimator="@null" />
    </LinearLayout>
</ScrollView>
