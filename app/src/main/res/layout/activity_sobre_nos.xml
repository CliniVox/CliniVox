<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Botão voltar -->
        <TextView
            android:id="@+id/btnVoltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← VOLTAR"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="14sp" />


        <!-- Título -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_below="@id/btnVoltar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sobre nós"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <!-- Conteúdo -->
        <LinearLayout
            android:id="@+id/conteudo"
            android:layout_below="@id/tvTitulo"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Descrição -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🧠 *CliniVox* é um assistente virtual de saúde, desenvolvido para ajudar pacientes e médicos a organizarem consultas de forma prática e por comandos de voz."
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <!-- Missão -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🩺 *Nossa missão:*\nTornar o cuidado com a saúde mais acessível, eficiente e humanizado por meio da tecnologia."
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <!-- Funcionalidades -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🔍 *Funcionalidades:*\n• Assistente por voz (IA VAPLAI integrada);\n• Marcação de consultas;\n• Visualização da agenda médica;\n• Comunicação clara entre paciente e clínica"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <!-- Privacidade -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🔒 *Privacidade:*\nSeus dados são protegidos com segurança e criptografia. Tudo o que você diz ou cadastra é usado apenas para sua experiência no app."
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <!-- Créditos -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Desenvolvido por:\n\n• Caik GITHUB\n• Igor GITHUB"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="32dp" />
        </LinearLayout>

        <!-- Rodapé -->
        <TextView
            android:id="@+id/tvRodape"
            android:layout_below="@id/conteudo"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CliniVox"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_marginTop="32dp" />
    </RelativeLayout>
</ScrollView>
