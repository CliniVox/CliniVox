<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <!-- Título CliniVox -->
    <TextView
        android:id="@+id/tvTituloApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CliniVox"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <!-- Botão engrenagem -->
    <ImageButton
        android:id="@+id/btnConfig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_manage"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Configurações"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp" />

    <!-- Texto boas-vindas -->
    <TextView
        android:id="@+id/tvBoasVindas"
        android:layout_below="@id/tvTituloApp"
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bem-vindo(a),"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_centerHorizontal="true" />

    <!-- Nome do médico -->
    <TextView
        android:id="@+id/tvNomeMedico"
        android:layout_below="@id/tvBoasVindas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dr. João Silva"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_centerHorizontal="true" />

    <!-- Ícone e texto de consultas -->
    <LinearLayout
        android:id="@+id/consultasHojeLayout"
        android:layout_below="@id/tvNomeMedico"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/tvConsultasHoje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Consultas Hoje: 5"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginStart="6dp"/>
    </LinearLayout>

    <!-- Botão "Agenda" -->
    <Button
        android:id="@+id/btnAgenda"
        android:layout_below="@id/consultasHojeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#A8D5A2"
        android:text="Agenda"
        android:textColor="#000000"
        android:textSize="16sp"
        android:padding="12dp" />
</RelativeLayout>
